/* pages/detail-search/index.wxss */
page {
  padding: 0 20rpx;
}

/* 搜索框 */
.van-search {
  padding: 10px 0;
}

/* 热门搜索 */
.hot {
  padding: 10rpx;
}

.hot .list {
  display: flex;
  flex-wrap: wrap;
}

.hot .tag {
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.hot .tag:first-of-type {
  color: green;
}